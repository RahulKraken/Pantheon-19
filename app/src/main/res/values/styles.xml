    <!--dark theme-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#000</item>
        <item name="buttonColor">#1a1a1a</item>
        <item name="textColor">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!--light theme-->
    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#fff</item>
        <item name="buttonColor">@color/md_grey_300</item>
        <item name="textColor">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:animator/fade_out</item>
    </style>
    
    <!--=================================== font styles ================================-->

    <style name="montserrat_medium_20">
        <item name="android:fontFamily">@font/montserrat_medium</item>
